@model IEnumerable<Product>
@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="row pb-3">
       @foreach (var item in Model)
       {
           <div class="col-lg-3 col-md-6">
               <div class="row p-2">
                   <div class="col-12 p-1 rounded border border-secondary">
                       <div class="card">
                           <div class="card-body">
                           <img src="@item.ImageUrl" class="card-img-top rounded" height=250 width=200  />
                           <div class="ps-1">
                               <p class="card-title h5 text-primary">
                                   @item.Title
                               </p>
                                <p class="card-title text-secondary">
                                   by @item.Author
                               </p>
                           </div>
                           <div class="ps-1">
                              <p>List Price : <strike><b>$@item.Price.ToString("0.00")</b></strike></p>
                           </div>
                           <div class="ps-1">
                              <p>As low as : <b>$@item.Price100.ToString("0.00")</b></p>
                           </div>
                           </div>
                       </div>
                       <a class="btn btn-primary form-control" asp-action="Details" asp-route-productId="@item.Id">
                           Details
                       </a>
                   </div>
               </div>
           </div>
       }
    </div>
</div>
