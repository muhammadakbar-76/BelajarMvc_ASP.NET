
@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<div class="row my-3">
        <div class="col-6">
            <h2 class="text-primary">Category</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary rounded">➕ Add Category</a>
        </div>
    </div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td width="50%">
                    @item.Name
                </td>
                 <td width="30%">
                    @item.DisplayOrder
                </td>
                <td class="p-2">
                    <a asp-controller="Category" asp-action="Edit" asp-route-Id="@item.Id" class="btn btn-warning rounded">Edit</a><a asp-controller="Category" asp-action="Delete" asp-route-Id="@item.Id" onclick="return confirm('Are You Sure?')" class="btn btn-danger rounded mx-3">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>