
@{
    ViewData["Title"] = "Index";
}

<div class="row my-3">
        <div class="col-6">
            <h2 class="text-primary">Product</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Upsert" class="btn btn-primary rounded">Add New Product</a>
        </div>
    </div>

<table class="table table-bordered table-striped" id="tblData">
    <thead>
        <tr>
            <th>Title</th>
            <th>ISBN</th>
            <th>Price</th>
            <th>Author</th>
            <th>Category</th>
            <th></th>
        </tr>
    </thead>

@section Scripts {
    <script src="~/js/product.js"></script>
}
   
</table>